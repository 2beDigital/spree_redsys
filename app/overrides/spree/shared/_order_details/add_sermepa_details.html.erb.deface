<!--
  insert_bottom '.payment-info'

-->
<% order.payments.each do |payment| %>
    <% if payment.source_type.to_s.include?('Sermepa') %>
        <span class="cc-type">
            <%= image_tag 'credit_cards/credit_card.gif', :id => 'creditcard-sermepa' %>
            <%= t("payment_states.#{payment.state}") %>
        </span>
    <% end %>
<% end %>


